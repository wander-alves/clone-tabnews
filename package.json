{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "",
  "main": "./pages/index.js",
  "scripts": {
    "dev": "npm run services:up && npm run services:wait:database && npm run migrations:up && next dev",
    "dev:runsafe": "node ./infra/scripts/start-dev.js",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "posttest": "npm run services:stop",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "services:up": "docker compose -f ./infra/compose.yaml up -d",
    "services:stop": "docker compose -f ./infra/compose.yaml stop ",
    "services:down": "docker compose -f ./infra/compose.yaml down ",
    "services:wait:database": "node ./infra/scripts/wait-for-postgres.js",
    "migrations:create": "node-pg-migrate -m ./infra/migrations/ create",
    "migrations:up": "node-pg-migrate --envPath ./.env.development -m ./infra/migrations/ up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "prepare": "husky",
    "commit": "cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wander-alves/clone-tabnews.git"
  },
  "keywords": [],
  "author": "Wanderson Alves (https://github.com/wander-alves)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wander-alves/clone-tabnews/issues"
  },
  "homepage": "https://github.com/wander-alves/clone-tabnews#readme",
  "dependencies": {
    
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "next": "14.2.5",
    "next-connect": "^1.0.0",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "swr": "2.2.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@secretlint/secretlint-rule-preset-recommend": "9.3.4",
    "commitizen": "4.3.0",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "secretlint": "9.3.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
